---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Portal Siswa - SMA Insan Cendekia">
    <div
        class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8"
    >
        <div
            class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-lg border border-gray-100"
        >
            <div class="text-center">
                <img
                    class="mx-auto h-20 w-auto object-contain mb-4"
                    src="/logo.png"
                    alt="Logo SMA Insan Cendekia"
                />
                <h2 class="text-3xl font-extrabold text-[#123C69]">
                    Portal Siswa
                </h2>
                <p class="mt-2 text-sm text-gray-600">
                    Silakan masuk menggunakan NISN dan Password Anda
                </p>
            </div>
            <form class="mt-8 space-y-6" action="#" method="POST">
                <div class="rounded-md shadow-sm -space-y-px">
                    <div class="mb-4">
                        <label for="nisn" class="sr-only">NISN</label>
                        <input
                            id="nisn"
                            name="nisn"
                            type="text"
                            required
                            class="appearance-none rounded-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-[#123C69] focus:border-[#123C69] focus:z-10 sm:text-sm"
                            placeholder="NISN / Email"
                        />
                    </div>
                    <div>
                        <label for="password" class="sr-only">Password</label>
                        <input
                            id="password"
                            name="password"
                            type="password"
                            required
                            class="appearance-none rounded-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-[#123C69] focus:border-[#123C69] focus:z-10 sm:text-sm"
                            placeholder="Password"
                        />
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input
                            id="remember-me"
                            name="remember-me"
                            type="checkbox"
                            class="h-4 w-4 text-[#123C69] focus:ring-[#123C69] border-gray-300 rounded"
                        />
                        <label
                            for="remember-me"
                            class="ml-2 block text-sm text-gray-900"
                        >
                            Ingat Saya
                        </label>
                    </div>

                    <div class="text-sm">
                        <a
                            href="#"
                            class="font-medium text-[#123C69] hover:text-[#0e2e52]"
                        >
                            Lupa password?
                        </a>
                    </div>
                </div>

                <div>
                    <button
                        type="submit"
                        class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-[#123C69] hover:bg-[#0e2e52] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#123C69] transition-colors duration-200"
                    >
                        <span
                            class="absolute left-0 inset-y-0 flex items-center pl-3"
                        >
                            <svg
                                class="h-5 w-5 text-blue-300 group-hover:text-blue-200"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                                aria-hidden="true"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </span>
                        Masuk
                    </button>
                </div>
            </form>
        </div>
    </div>
</Layout>
