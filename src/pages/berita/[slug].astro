---
import { getCollection, type CollectionEntry } from "astro:content";
type BeritaEntry = CollectionEntry<"berita">;
import Layout from "../../layouts/Layout.astro";
import {
    Calendar,
    User,
    ArrowLeft,
    Tag,
    Share2,
    Facebook,
    Twitter,
    Linkedin,
    ArrowRight,
} from "lucide-react";

export async function getStaticPaths() {
    const blogEntries = await getCollection("berita");
    return blogEntries.map((entry: CollectionEntry<"berita">) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

interface Props {
    entry: CollectionEntry<"berita">;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Get related posts based on tags
const allPosts = await getCollection("berita");
const relatedPosts = allPosts
    .filter(
        (post: CollectionEntry<"berita">) =>
            post.slug !== entry.slug && // Exclude current post
            post.data.tags?.some((tag: string) =>
                entry.data.tags?.includes(tag),
            ), // Must share at least one tag
    )
    .slice(0, 3); // Limit to 3

// Fallback if no related posts found (show recent ones)
const finalRelatedPosts =
    relatedPosts.length > 0
        ? relatedPosts
        : allPosts
              .filter((p: CollectionEntry<"berita">) => p.slug !== entry.slug)
              .slice(0, 3);
---

<Layout title={`${entry.data.title} - SMA Insan Cendekia`}>
    <main class="bg-slate-50 min-h-screen pt-32 pb-20">
        <article class="container mx-auto px-6 max-w-4xl">
            {/* Back Button */}
            <a
                href="/berita"
                class="inline-flex items-center text-slate-500 hover:text-blue-600 font-medium mb-8 transition-colors group"
            >
                <ArrowLeft
                    className="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform"
                />
                Kembali ke Berita
            </a>

            {/* Header */}
            <header class="mb-12">
                {
                    entry.data.image && (
                        <div class="rounded-3xl overflow-hidden shadow-xl mb-8 aspect-video relative">
                            <img
                                src={entry.data.image}
                                alt={entry.data.title}
                                class="w-full h-full object-cover"
                            />
                        </div>
                    )
                }

                <div class="space-y-6">
                    <div
                        class="flex flex-wrap items-center justify-between gap-4"
                    >
                        <div class="flex flex-wrap items-center gap-2">
                            {
                                entry.data.tags &&
                                    entry.data.tags.map((tag: unknown) => (
                                        <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full flex items-center gap-1.5 text-sm font-medium">
                                            <Tag className="w-3.5 h-3.5" />
                                            {String(tag)}
                                        </span>
                                    ))
                            }
                        </div>

                        {/* Share Buttons */}
                        <div class="flex items-center gap-2 text-slate-400">
                            <span
                                class="text-xs font-semibold uppercase tracking-wider mr-2"
                                >Share</span
                            >
                            <button
                                class="p-2 rounded-full bg-slate-100 hover:bg-blue-100 hover:text-blue-600 transition-colors"
                            >
                                <Facebook className="w-4 h-4" />
                            </button>
                            <button
                                class="p-2 rounded-full bg-slate-100 hover:bg-sky-100 hover:text-sky-500 transition-colors"
                            >
                                <Twitter className="w-4 h-4" />
                            </button>
                            <button
                                class="p-2 rounded-full bg-slate-100 hover:bg-indigo-100 hover:text-indigo-600 transition-colors"
                            >
                                <Linkedin className="w-4 h-4" />
                            </button>
                        </div>
                    </div>

                    <h1
                        class="text-3xl md:text-5xl font-bold text-slate-900 leading-tight"
                    >
                        {entry.data.title}
                    </h1>

                    <div
                        class="flex items-center gap-6 text-slate-500 border-b border-slate-200 pb-8"
                    >
                        <div class="flex items-center gap-2">
                            <div
                                class="w-10 h-10 rounded-full bg-slate-200 flex items-center justify-center"
                            >
                                <User className="w-5 h-5 text-slate-500" />
                            </div>
                            <div>
                                <p
                                    class="text-xs uppercase tracking-wider font-semibold text-slate-400"
                                >
                                    Penulis
                                </p>
                                <p class="font-medium text-slate-900">
                                    {entry.data.author}
                                </p>
                            </div>
                        </div>
                        <div class="w-px h-10 bg-slate-200"></div>
                        <div>
                            <p
                                class="text-xs uppercase tracking-wider font-semibold text-slate-400"
                            >
                                Tanggal
                            </p>
                            <div
                                class="flex items-center gap-2 font-medium text-slate-900"
                            >
                                <Calendar className="w-4 h-4" />
                                {
                                    new Date(
                                        entry.data.pubDate,
                                    ).toLocaleDateString("id-ID", {
                                        year: "numeric",
                                        month: "long",
                                        day: "numeric",
                                    })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            {/* Content */}
            <div
                class="prose prose-lg prose-slate max-w-none prose-headings:font-bold prose-headings:text-slate-900 prose-p:text-slate-700 prose-a:text-blue-600 hover:prose-a:text-blue-700 prose-img:rounded-2xl prose-img:shadow-lg mb-20"
            >
                <Content />
            </div>

            {/* Related Posts */}
            <hr class="border-slate-200 mb-12" />
            <section>
                <h3
                    class="text-2xl font-bold text-slate-900 mb-8 flex items-center gap-2"
                >
                    <ArrowRight className="w-6 h-6 text-blue-600" />
                    Berita Terkait
                </h3>
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
                >
                    {
                        finalRelatedPosts.map((post: BeritaEntry) => (
                            <a
                                href={`/berita/${post.slug}`}
                                class="group bg-white rounded-2xl p-5 border border-slate-100 shadow-sm hover:shadow-lg transition-all"
                            >
                                <div class="aspect-video bg-slate-100 rounded-xl mb-4 overflow-hidden relative">
                                    {post.data.image && (
                                        <img
                                            src={post.data.image}
                                            alt={post.data.title}
                                            class="w-full h-full object-cover group-hover:scale-105 transition-transform"
                                        />
                                    )}
                                </div>
                                <div class="text-xs text-slate-400 mb-2">
                                    {new Date(
                                        post.data.pubDate,
                                    ).toLocaleDateString("id-ID", {
                                        year: "numeric",
                                        month: "long",
                                        day: "numeric",
                                    })}
                                </div>
                                <h4 class="font-bold text-slate-900 group-hover:text-blue-600 transition-colors line-clamp-2">
                                    {post.data.title}
                                </h4>
                            </a>
                        ))
                    }
                </div>
            </section>
        </article>
    </main>
</Layout>
